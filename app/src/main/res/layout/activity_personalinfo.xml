<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".oyjz.PersonalinfoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/text_ps_back"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_ps_phone"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:text="手机号码"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_back"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_ps_phone1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_back"
        app:layout_constraintLeft_toRightOf="@+id/text_ps_phone"
        app:layout_constraintRight_toRightOf="parent"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="12548946315" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text_ps_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:text="名称"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_phone"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_ps_name1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_phone"
        app:layout_constraintLeft_toRightOf="@+id/text_ps_name"
        app:layout_constraintRight_toRightOf="parent"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="张三" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/text_ps_age"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:text="年龄"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_name"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_ps_age1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_name"
        app:layout_constraintLeft_toRightOf="@+id/text_ps_age"
        app:layout_constraintRight_toRightOf="parent"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="26" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text_ps_sex"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:text="性别"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_age"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_ps_sex1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_age"
        app:layout_constraintLeft_toRightOf="@+id/text_ps_sex"
        app:layout_constraintRight_toRightOf="parent"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="男" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text_ps_id"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="8dp"
        android:textSize="20sp"
        android:text="身份证"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_sex"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_ps_id1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_sex"
        app:layout_constraintLeft_toRightOf="@+id/text_ps_id"
        app:layout_constraintRight_toRightOf="parent"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="44068449415748164X" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text_ps_job"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="30dp"
        android:text="工号"
        android:textSize="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_id" />
    <android.support.design.widget.TextInputLayout
        android:id="@+id/text_ps_job1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_id"
        app:layout_constraintLeft_toRightOf="@+id/text_ps_job"
        app:layout_constraintRight_toRightOf="parent"
        >
        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="部门主管" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/text_ps_modify"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_bg"
        android:text="修改个人信息"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_ps_job"
        app:layout_constraintVertical_bias="0.0" />



</android.support.constraint.ConstraintLayout>